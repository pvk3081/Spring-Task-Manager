<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Book Your Hotel</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/booking" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value=<%= currentUser.username %> disabled>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="city" placeholder="city">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="date1" placeholder="Check in(dd/mm/yy)">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="date2" placeholder="Check out(dd/mm/yy)">
                </div>
                
                
<div class="form-group">
  <label for="sel1">Total Rooms:</label>
  <select class="form-control" name="room" >
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
  </select>
</div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/home">Go Back</a>
        </div>
    </div>
</div>




<% include ./partials/footer %>
